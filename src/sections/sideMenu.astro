<div
  id="bgSideMenu"
  class="hidden w-full h-screen bg-black/50 fixed top-0 right-0 transition-all duration-500 ease-in-out"
>
</div>
<div
  id="sideMenu"
  class="w-[300px] h-screen bg-blue3 fixed top-0 -right-[300px] transition-all duration-500 ease-in-out"
>
  <ul class="flex flex-col items-start justify-center py-20 px-5">
    <li>
      <a class="block min-w-[150px] px-4 py-3 hover:bg-[#EEF7FF]" href="#"
        >Inicio</a
      >
    </li>
    <li>
      <a class="block min-w-[150px] px-4 py-3 hover:bg-[#EEF7FF]" href="#"
        >Sobre Nosotros</a
      >
    </li>
    <li>
      <a class="block min-w-[150px] px-4 py-3 hover:bg-[#EEF7FF]" href="#"
        >Productos</a
      >
    </li>
    <li>
      <a class="block min-w-[150px] px-4 py-3 hover:bg-[#EEF7FF]" href="#"
        >Contactanos</a
      >
    </li>
  </ul>
</div>

<script>
  import { isSideMenuOpen } from "@/store";

  const bgSideMenu = document.getElementById("bgSideMenu");
  const sideMenu = document.getElementById("sideMenu");

  isSideMenuOpen.subscribe((open) => {
    if (open) {
      bgSideMenu?.classList.remove("hidden");
      sideMenu?.classList.remove("-right-[300px]");
      sideMenu?.classList.add("right-0");
    } else {
      bgSideMenu?.classList.add("hidden");
      sideMenu?.classList.remove("right-0");
      sideMenu?.classList.add("-right-[300px]");
    }
  });
</script>
